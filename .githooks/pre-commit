#!/bin/bash

echo "Running Go lint..."
golangci-lint run
if [ $? -ne 0 ]; then
  echo "Linting failed. Fix issues before committing."
  exit 1
fi

echo "Running Go tests..."
go test ./...
if [ $? -ne 0 ]; then
  echo "Tests failed. Fix issues before committing."
  exit 1
fi

echo "All checks passed!"
exit 0